generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Board {
  id        String   @id @default(uuid())
  name      String
  tasks     Task[]
  createdAt DateTime
  updatedAt DateTime
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id])
  position    Int
  createdAt   DateTime
  updatedAt   DateTime
}
