generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String
  tasks Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  status      String
  boardId     Int
  board       Board   @relation(fields: [boardId], references: [id])
  position    Int
}
